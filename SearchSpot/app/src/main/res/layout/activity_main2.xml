<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOnCreateCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onCreate Count: 0"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvOnResumeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onResume Count: 0"
        android:textSize="24sp"
        android:layout_alignStart="@+id/tvOnCreateCount"
        android:layout_below="@+id/tvOnCreateCount"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvOnPauseCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onPause Count: 0"
        android:textSize="24sp"
        android:layout_alignStart="@+id/tvOnResumeCount"
        android:layout_below="@+id/tvOnResumeCount"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvOnStopCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onStop Count: 0"
        android:textSize="24sp"
        android:layout_alignStart="@+id/tvOnPauseCount"
        android:layout_below="@+id/tvOnPauseCount"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
